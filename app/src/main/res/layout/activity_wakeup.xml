<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@color/colorWhite">
      <com.bearya.robot.household.views.ClearableEditText
          android:id="@+id/edt_name"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:textColorHint="@color/colorHint"
          android:textColor="@color/colorBlack"
          android:background="@null"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:minHeight="66dp"
          android:layout_marginTop="40dp"
          android:hint="请输入机器人名字"
          android:textSize="@dimen/activity_text_size" />
      <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:layout_marginLeft="20dp"
          android:layout_marginBottom="10dp"
          android:background="@color/colorGray"  />
      <TextView
          android:id="@+id/tv_evaluate"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="20dp"
          android:visibility="gone"
          android:background="@color/colorWakeup"
          android:textSize="@dimen/activity_text_size"
          android:text="@string/wakeup_walls"
          android:textColor="@color/colorWhite"
          android:gravity="center"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:gravity="center"
          android:visibility="gone"
          android:layout_marginTop="20dp"
          android:orientation="horizontal">

          <ImageView
              android:id="@+id/iv_star_1"
              android:layout_width="28dp"
              android:layout_height="28dp"
              android:src="@mipmap/star_uncheck"/>
          <ImageView
              android:id="@+id/iv_star_2"
              android:layout_width="28dp"
              android:layout_height="28dp"
              android:layout_marginLeft="10dp"
              android:src="@mipmap/star_uncheck"/>
          <ImageView
              android:id="@+id/iv_star_3"
              android:layout_width="28dp"
              android:layout_height="28dp"
              android:layout_marginLeft="10dp"
              android:src="@mipmap/star_uncheck"/>
          <ImageView
              android:id="@+id/iv_star_4"
              android:layout_width="28dp"
              android:layout_height="28dp"
              android:layout_marginLeft="10dp"
              android:src="@mipmap/star_uncheck"/>
          <ImageView
              android:id="@+id/iv_star_5"
              android:layout_width="28dp"
              android:layout_height="28dp"
              android:layout_marginLeft="10dp"
              android:src="@mipmap/star_uncheck"/>

      </LinearLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_margin="20dp"
          android:visibility="gone"
          android:textSize="@dimen/activity_text_size_small"
          android:text="@string/wakeup_content"
          android:textColor="@color/colorHintGray"/>
  </LinearLayout>

</LinearLayout>
